<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<%= link_to "Edit", edit_post_path(@post) %>

<% @post.comments.each do |comment| %>
  <p><%= comment.name %></p>
  <p><%= comment.comment %></p>
<% end %>

<%= form_for [@post, @new_comment] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br><br>
  <%= f.label :comment %>
  <%= f.text_field :comment %> <br><br>
  <%= f.submit "Save" %> 
<% end %>
